[module/battery]
type = internal/battery
battery = BAT1
adapter = ADP1
full-at = 98

format-charging = <animation-charging> <label-charging>
;format-charging-underline = ${colors.background}

format-discharging = <animation-discharging> <label-discharging>
format-discharging-underline = #ff0

format-full-prefix = "100%"
format-full-prefix-foreground = ${colors.foreground-alt}
format-full-underline = #0f0

ramp-capacity-0 = 0
ramp-capacity-1 = 1
ramp-capacity-2 = 2
ramp-capacity-foreground = ${colors.foreground-alt}

animation-charging-0 = 0
animation-charging-1 = 1
animation-charging-2 = 2
animation-charging-3 = 3
animation-charging-foreground = ${colors.foreground-alt}
animation-charging-framerate = 750

animation-discharging-0 = 0
animation-discharging-1 = 1
animation-discharging-2 = 2
animation-discharging-3 = 3
animation-discharging-foreground = ${colors.foreground-alt}
animation-discharging-framerate = 750

[module/temperature]
type = internal/temperature
